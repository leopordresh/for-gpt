#include "gd32f10x.h"

void LED_Init(void);
void LED_On(void);
void LED_Off(void);

int main(void)
{
    LED_Init();

    while(1) {
        LED_On();
        Delay(1000000);
        LED_Off();
        Delay(1000000);
    }
}

void LED_Init(void)
{
    rcu_periph_clock_enable(RCU_GPIOC);
    gpio_init(GPIOC, GPIO_MODE_OUT_PP, GPIO_OSPEED_50MHZ, GPIO_PIN_13);
}

void LED_On(void)
{
    gpio_bit_set(GPIOC, GPIO_PIN_13);
}

void LED_Off(void)
{
    gpio_bit_reset(GPIOC, GPIO_PIN_13);
}

void Delay(uint32_t count)
{
    uint32_t i;

    for (i = 0; i < count; i++);
}
